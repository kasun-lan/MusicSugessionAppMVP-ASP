@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated =
        HttpContextAccessor.HttpContext?
            .Session.GetString("IsAuthenticated") == "true";
}


<div class="flex justify-around items-center text-[#B4FF00]"
     data-bottom-nav>

    <!-- Menu -->
    <button data-nav="menu" class="p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>

    </button>

    <!-- Profile -->
    <button data-nav="profile1" class="relative p-2 @(isAuthenticated ? "ring-2 ring-[#B4FF00] rounded-full" : "")">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
        </svg>



    </button>

    <!-- Info -->
    <button data-nav="info" class="p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
        </svg>

    </button>

</div>

<script>
    (function () {
        const nav = document.currentScript.previousElementSibling;
        if (!nav) return;

        nav.querySelector('[data-nav="menu"]')
           .addEventListener('click', () => {
               window.location.href = '/Sessions';
           });

        nav.querySelector('[data-nav="profile1"]')
           .addEventListener('click', () => {
               window.location.href = '/Profile';
           });

        nav.querySelector('[data-nav="info"]')
           .addEventListener('click', () => {
               console.log('Info clicked');
           });
    })();
</script>