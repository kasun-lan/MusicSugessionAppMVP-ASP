    <script src="https://js-cdn.music.apple.com/musickit/v1/musickit.js"></script>
    <script>
document.addEventListener("musickitloaded", async () => {
    await MusicKit.configure({
        developerToken: "YOUR_DEVELOPER_TOKEN_FROM_SERVER",
        app: {
            name: "Your App Name",
            build: "1.0.0"
        }
    });
});

async function signInToAppleMusic() {
    const music = MusicKit.getInstance();
    const userToken = await music.authorize(); // <-- THIS is what you need
    console.log("User Token:", userToken);

    // Send this to your ASP.NET Core backend
    await fetch("/api/music/storeUserToken", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ token: userToken })
    });
}
</script>
