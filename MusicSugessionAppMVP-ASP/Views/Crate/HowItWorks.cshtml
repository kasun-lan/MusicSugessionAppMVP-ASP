@{
    ViewData["Title"] = "How It Works";
    Layout = "_Layout";
}

<div class="app app-black how-it-works">

    <!-- HEADER ICON -->
    <div class="how-header">
        <div class="logo-shape"></div>
        <div class="logo-line"></div>
    </div>

    <!-- CONTENT -->
    <div class="content how-content">

        <div class="how-middle">

            <div class="how-title">
                HOW IT WORKS
            </div>

            <div class="swipe-row">
                <div class="chevrons left">››</div>

                <img class="album-image"
                     src="https://images.unsplash.com/photo-1511379938547-c1f69419868d?w=300&h=300&fit=crop"
                     alt="Album cover placeholder" />

                <div class="chevrons right">››</div>
            </div>

            <div class="how-text">
                <div>Swipe right if you like the track.</div>
                <div>Swipe left if you don’t like the track.</div>
            </div>

            <div class="how-cta">
                Swipe right to get started
            </div>

        </div>



    </div>

    <!-- BOTTOM NAV -->
    <div class="bottom-nav">
        <button class="nav-btn menu"></button>
        <button class="nav-btn home"></button>
        <button class="nav-btn info"></button>
    </div>
</div>

@section Scripts {
    <script>
        const swipeArea = document.getElementById("swipeArea");
        let startX = 0;

        swipeArea.addEventListener("touchstart", e => {
            startX = e.touches[0].clientX;
        });

        swipeArea.addEventListener("touchend", e => {
            const endX = e.changedTouches[0].clientX;
            const diff = endX - startX;

            if (diff > 60) {
                // ✅ swipe right → proceed
                window.location.href = "/Crate/Index";
            }
            // ❌ swipe left → intentionally do nothing
        });
    </script>
}
