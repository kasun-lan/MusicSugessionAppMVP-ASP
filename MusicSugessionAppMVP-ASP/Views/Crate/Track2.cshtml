@{
    ViewData["Title"] = "Track2";
    Layout = "_Layout";
}

<div class="app app-black">

    <!-- HEADER ICON -->
    <div class="how-header">
        <div class="logo-shape"></div>
        <div class="logo-line"></div>
    </div>

    <!-- CONTENT -->
    <div class="content">

        <div class="crate-source">
            Crate source: Michael Bibi, Pawsa, Dennis…
        </div>

        <div class="swipe-stage">

            <div class="feedback like">♥</div>
            <div class="feedback dislike">♡</div>

            <img id="albumCard"
                 class="album-card"
                 src="https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?w=600&h=600&fit=crop"
                 alt="Album cover" />

        </div>

        <div class="track-info">
            <div class="track-title">DIRTY CASH (MONEY TALKS)</div>
            <div class="track-artist">Pawsa & Adventures of Stevie</div>
        </div>




    </div>

    <!-- BOTTOM NAV -->
    <div class="bottom-nav">
        <button class="nav-btn menu"></button>
        <button class="nav-btn home"></button>
        <button class="nav-btn info"></button>
    </div>
</div>

@section Scripts {
    <script>
        const swipeArea = document.getElementById("swipeArea");
        let startX = 0;

        swipeArea.addEventListener("touchstart", e => {
            startX = e.touches[0].clientX;
        });

        swipeArea.addEventListener("touchend", e => {
            const endX = e.changedTouches[0].clientX;
            const diff = endX - startX;

            if (diff > 60) {
                // ✅ swipe right → proceed
                window.location.href = "/Crate/Index";
            }
            // ❌ swipe left → intentionally do nothing
        });
    </script>
}
