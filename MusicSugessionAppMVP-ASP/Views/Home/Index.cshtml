@{
    ViewData["Title"] = "Home";
}


@section Head {
    <link rel="stylesheet" href="~/css/login.css" />

    <style>
        .grayscale-bg {
            background-image: url('images/crate-digging.webp');
            filter: grayscale(100%);
        }
    </style>

}

<div class="relative w-full max-w-[375px] h-[812px]">

    

    <!-- Background -->
    <div class="absolute inset-0 bg-cover bg-center grayscale-bg">
        <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <!-- Content -->
    <div class="relative h-full flex flex-col justify-between p-8 pt-16 pb-24">

        @Html.Partial("_LogoLarge")


        <div class="flex-1 flex flex-col justify-center w-full px-2">

            <div class="flex items-baseline gap-2 mb-1">
                <span class="bg-white text-black font-bold text-xl px-1 uppercase tracking-tight">
                    SPEED CRATER
                </span>
                <span class="text-white italic text-lg font-serif">
                    (noun)
                </span>
            </div>

            <p class="text-white text-lg italic mb-6 font-serif">
                spēd krāt·ing
            </p>

            <p class="text-white text-base font-medium leading-snug max-w-[85%]">
                To rapidly go through crates of music in the pursuit of finding hidden gems.
            </p>

            <div class="space-y-4 pt-12">
                <a asp-controller="Sources"
                   asp-action="Index"
                   class="block text-center w-full bg-[#B4FF00] hover:bg-[#A0E600]
                          text-black font-bold py-4 px-6 rounded
                          transition-colors shadow-[0_0_30px_rgba(180,255,0,0.3)]">
                    GO SPEED CRATING
                </a>

                @if (ViewBag.IsAuthenticated != true)
                {
                    <a asp-controller="Home"
                       asp-action="Login"
                       class="w-full border-2 border-white hover:border-white/50
                              text-white font-medium py-4 px-6 rounded transition-colors block text-center">
                        LOGIN
                    </a>
                }
                else
                {
                    <div class="text-white text-sm text-center">
                        Hello @ViewBag.UserName
                    </div>
                }
            </div>
        </div>

        <!-- Bottom Navigation -->
        @await Html.PartialAsync("_BottomNav")


    </div>
</div>
