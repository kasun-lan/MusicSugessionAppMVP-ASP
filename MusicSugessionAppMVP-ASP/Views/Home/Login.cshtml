@{
    ViewData["Title"] = "Login";
}


@section Head {
    <link rel="stylesheet" href="~/css/login.css" />
}


<div class="relative w-full max-w-[375px] h-[812px] bg-black rounded-[3rem] overflow-hidden shadow-2xl border-8 border-gray-900">

    <!-- Notch -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-40 h-7 bg-black rounded-b-3xl z-20"></div>

    <div class="relative h-full flex flex-col justify-between p-8 pt-16 pb-24">

        @Html.Partial("_Logo")

        <!-- Content -->
        <div class="flex-1 flex flex-col">

            <h2 class="text-white text-xl font-bold mb-6">
                LOGIN
            </h2>

            @if (ViewBag.Error != null)
            {
                <div class="bg-red-500/20 border-2 border-red-500 text-red-400 px-4 py-3 rounded mb-4 text-sm">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                <div class="space-y-4 mb-4">
                    <input type="text"
                           name="email"
                           placeholder="email"
                           class="w-full bg-transparent border-2 border-white/30
              focus:border-[#B4FF00] text-white
              placeholder-gray-500 py-3 px-4 rounded
              outline-none transition-colors" />

                    <input type="password"
                           name="password"
                           placeholder="Password"
                           class="w-full bg-transparent border-2 border-white/30
              focus:border-[#B4FF00] text-white
              placeholder-gray-500 py-3 px-4 rounded
              outline-none transition-colors" />

                </div>

                <div class="text-right mb-6">
                    <a href="#"
                       class="text-white/60 hover:text-white text-xs">
                        Forgot password?
                    </a>
                </div>

                <button type="submit" class="w-full bg-[#B4FF00] hover:bg-[#A0E600]
                           text-black font-bold py-4 px-6 rounded
                           transition-colors mb-6">
                    Login
                </button>
            </form>

            

            <div class="text-center">
                <span class="text-white/60 text-sm">
                    No profile?
                </span>
                <a asp-controller="Register" 
                   asp-action="CreateProfile"
                   class="text-[#B4FF00] hover:underline text-sm ml-1">
                    Create one here
                </a>
            </div>
        </div>

        @await Html.PartialAsync("_BottomNav")

    </div>
</div>